<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="mt-2">Edit Listing</h2>
            <form method="POST" action="/listings/<%=listing._id %>?_method=PUT" class="needs-validation" novalidate
                enctype="multipart/form-data">
                <div class="mb-1">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" value="<%=listing.title%>" name="listing[title]" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <br>

                <div class="mb-1">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]" class="form-control"
                        required><%=listing.description%></textarea>
                    <div class="invalid-feedback">
                        Enter a short description
                    </div>
                </div>
                <br>

                <div class="mb-1">
                    <img src="<%=originalImageUrl%>" alt="">
                </div>
                <div class="mb-1">
                    <label for="image-url" class="form-label">Image-URL</label>
                    <input type="file" value="<%=listing.image.url%>" name="listing[image]" class="form-control">
                </div>
                <br>

                <div class="row">
                    <div class="mb-1 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input value="<%=listing.price%>" name="listing[price]" class="form-control" required>
                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>
                    <br>

                    <div class="mb-1 col-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" value="<%=listing.location%>" name="listing[location]" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Location should be valid
                        </div>
                    </div>
                </div>

                <div class="mb-1">
                    <label for="title" class="form-label">Country</label>
                    <input type="text" value="<%=listing.country%>" name="listing[country]" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <br>

                <button class="btn btn-outline-secondary mb-4">Update</button>
            </form>
        </div>
    </div>